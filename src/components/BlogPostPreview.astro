---
import type { Frontmatter } from "@models/fontmatter";
import { getPublishDateStrFromFileName } from "@utils/utils";

export interface Props {
  frontmatter: Frontmatter;
  url: string;
}
const props = Astro.props;
const fm = Astro.props.frontmatter;
const publishDateStr = getPublishDateStrFromFileName(props.url);
---

<a
  href={props.url}
  class="list-group-item list-group-item-action"
  aria-current="true"
>
  <div class="d-flex w-100 justify-content-between">
    <h3 class="mb-1">{fm.title}</h3>
    <small>{new Date(publishDateStr).toDateString()}</small>
  </div>
  <p class="mb-1">{fm.description}</p>
</a>
