---

const {w, h, src, t, id} = Astro.props;
const srcJPG = src.replace('.avif', '.jpg');
const srcWebp = src.replace('.avif', '.webp');
---
<picture >
  <source type="image/avif" srcset={src} />
  <source type="image/webp" srcset={srcWebp} />
  <img {id} width={w} height={h} src={srcJPG} alt={t} title={t} loading="lazy" />
</picture>